{
    "author": {
        "email": "admin@victorsmirnov.blog",
        "name": "Victor Smirnov",
        "url": "https://victorsmirnov.blog"
    },
    "browserslist": [
        "defaults"
    ],
    "bugs": "https://github.com/victorsmirnov/blog-theme/issues",
    "config": {
        "posts_per_page": 24,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "color_scheme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "Auto"
                ],
                "default": "Light"
            },
            "post_image_style": {
                "type": "select",
                "options": [
                    "Wide",
                    "Full",
                    "Small",
                    "Hidden"
                ],
                "default": "Wide",
                "group": "post"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Sign up for more like this.",
                "group": "post"
            },
            "google_optimize_id": {
                "type": "text",
                "default": ""
            }
        }
    },
    "demo": "https://victorsmirnov.blog",
    "description": "Theme for the victorsmirnov.blog",
    "devDependencies": {
        "autoprefixer": "^10.4.11",
        "beeper": "^3.0.0",
        "cssnano": "^5.1.13",
        "gscan": "^4.34.0",
        "gulp": "^4.0.2",
        "gulp-concat": "^2.6.1",
        "gulp-livereload": "^4.0.2",
        "gulp-postcss": "^9.0.1",
        "gulp-uglify": "^3.0.2",
        "gulp-zip": "^5.1.0",
        "postcss": "^8.4.16",
        "postcss-color-mod-function": "^3.0.3",
        "postcss-easy-import": "^4.0.0",
        "pump": "^3.0.0"
    },
    "engines": {
        "ghost": ">=5.0.0",
        "ghost-api": ">=5"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "license": "MIT",
    "name": "blog-theme",
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/victorsmirnov/blog-theme.git"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "pretest": "gulp build"
    },
    "type": "module",
    "version": "0.1.0",
    "dependencies": {}
}
