{
    "author": "Ghost Foundation <hello@ghost.org> (https://ghost.org/), Victor Smirnov <admin@victorsmirnov.blog> (https://victorsmirnov.blog)",
    "browserslist": [
        "defaults"
    ],
    "bugs": "https://github.com/victorsmirnov/blog-theme/issues",
    "config": {
        "posts_per_page": 25,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1000
            },
            "xl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "title_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Elegant serif"
            },
            "body_font": {
                "type": "select",
                "options": [
                    "Modern sans-serif",
                    "Elegant serif"
                ],
                "default": "Modern sans-serif"
            },
            "header_style": {
                "type": "select",
                "options": [
                    "Center aligned",
                    "Left aligned",
                    "Hidden"
                ],
                "default": "Hidden",
                "group": "homepage"
            },
            "show_logo_in_navigation": {
                "type": "boolean",
                "default": true,
                "group": "homepage"
            },
            "feed_layout": {
                "type": "select",
                "options": [
                    "Classic",
                    "Grid",
                    "List"
                ],
                "default": "List",
                "group": "homepage"
            },
            "color_scheme": {
                "type": "select",
                "options": [
                    "Light",
                    "Dark",
                    "Auto"
                ],
                "default": "Light"
            },
            "post_image_style": {
                "type": "select",
                "options": [
                    "Wide",
                    "Full",
                    "Small",
                    "Hidden"
                ],
                "default": "Wide",
                "group": "post"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Sign up for more like this.",
                "group": "post"
            },
            "show_recent_posts_footer": {
                "type": "boolean",
                "default": true,
                "group": "post"
            }
        }
    },
    "contributors": "https://github.com/TryGhost/Casper/graphs/contributors",
    "demo": "https://victorsmirnov.blog",
    "description": "Theme for the victorsmirnov.blog",
    "devDependencies": {
        "@tryghost/release-utils": "0.6.12",
        "autoprefixer": "10.2.5",
        "beeper": "2.1.0",
        "cssnano": "4.1.10",
        "gscan": "4.22.0",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "inquirer": "8.0.0",
        "postcss": "8.2.8",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "3.0.0",
        "pump": "3.0.0"
    },
    "engines": {
        "ghost": ">=5.0.0"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "license": "MIT",
    "name": "blog-theme",
    "renovate": {
        "extends": [
            "@tryghost:theme"
        ]
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/victorsmirnov/blog-theme.git"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; else echo \"Uncomitted changes found.\" && exit 1; fi",
        "postship": "git fetch && gulp release"
    },
    "version": "0.1.0"
}
